---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Contact - MyTinyCEO"
  description="Get in touch with MyTinyCEO. We'd love to hear from you."
>
  <Header />

  <section class="py-20 bg-gradient-to-br from-[#1e3a5f] to-[#1B6B6B] text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4 text-white">Let's Talk</h1>
      <p class="text-xl text-white opacity-95">Have a question? Want to partner? Just want to say hi?<br/>I personally read every message.</p>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-heading font-bold text-steel-blue mb-6">Send a Message</h2>
          <form id="contact-form" class="space-y-4">
            <div>
              <label for="name" class="block text-sm font-semibold text-charcoal mb-2">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tech-teal focus:border-transparent"
                required
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-charcoal mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tech-teal focus:border-transparent"
                required
              />
            </div>

            <div>
              <label for="category" class="block text-sm font-semibold text-charcoal mb-2">I'm interested in</label>
              <select
                id="category"
                name="category"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tech-teal focus:border-transparent"
              >
                <option>General Question</option>
                <option>Partnership Opportunity</option>
                <option>Press/Media Inquiry</option>
                <option>Enterprise/White-label</option>
                <option>Bug Report</option>
                <option>Feature Request</option>
                <option>Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-charcoal mb-2">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tech-teal focus:border-transparent"
                required
              ></textarea>
            </div>

            <button type="submit" id="submit-btn" class="btn-primary w-full">
              Send Message
            </button>

            <!-- Status messages -->
            <div id="form-status" class="text-center text-sm hidden">
              <!-- Success/error messages will appear here -->
            </div>
          </form>

          <script>
            const form = document.getElementById('contact-form') as HTMLFormElement;
            const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
            const statusDiv = document.getElementById('form-status') as HTMLDivElement;

            form.addEventListener('submit', async (e) => {
              e.preventDefault();

              // Get form data
              const formData = new FormData(form);
              const data = {
                name: formData.get('name'),
                email: formData.get('email'),
                category: formData.get('category'),
                message: formData.get('message')
              };

              // Disable submit button and show loading state
              submitBtn.disabled = true;
              submitBtn.textContent = 'Sending...';
              statusDiv.classList.add('hidden');

              try {
                // Send POST request to API endpoint
                const response = await fetch('/api/contact', {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json',
                  },
                  body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                  // Show success message
                  statusDiv.textContent = '‚úì Message sent successfully! I\'ll get back to you within 24-48 hours.';
                  statusDiv.className = 'text-center text-sm p-3 bg-green-100 text-green-700 rounded-lg';
                  statusDiv.classList.remove('hidden');

                  // Clear form
                  form.reset();
                } else {
                  // Show error message
                  statusDiv.textContent = '‚úó ' + (result.error || 'Failed to send message. Please try emailing directly.');
                  statusDiv.className = 'text-center text-sm p-3 bg-red-100 text-red-700 rounded-lg';
                  statusDiv.classList.remove('hidden');
                }
              } catch (error) {
                // Show error message
                statusDiv.textContent = '‚úó Network error. Please check your connection and try again.';
                statusDiv.className = 'text-center text-sm p-3 bg-red-100 text-red-700 rounded-lg';
                statusDiv.classList.remove('hidden');
              } finally {
                // Re-enable submit button
                submitBtn.disabled = false;
                submitBtn.textContent = 'Send Message';
              }
            });
          </script>
        </div>

        <!-- Direct Contact Info -->
        <div>
          <h2 class="text-2xl font-heading font-bold text-steel-blue mb-6">Direct Contact</h2>

          <div class="space-y-6">
            <div class="bg-gray-50 rounded-lg p-6">
              <div class="flex items-center mb-3">
                <div class="text-3xl mr-4">üìß</div>
                <div>
                  <h3 class="font-heading font-semibold text-steel-blue">Email</h3>
                  <a href="mailto:steve@4castconcrete.com" class="text-tech-teal hover:underline">steve@4castconcrete.com</a>
                </div>
              </div>
            </div>

            <div class="bg-gray-50 rounded-lg p-6">
              <div class="flex items-center mb-3">
                <div class="text-3xl mr-4">üíº</div>
                <div>
                  <h3 class="font-heading font-semibold text-steel-blue">Company Website</h3>
                  <a href="https://4castconcrete.com" target="_blank" rel="noopener noreferrer" class="text-tech-teal hover:underline">4castconcrete.com</a>
                </div>
              </div>
            </div>

            <!-- Response Time Promise -->
            <div class="bg-tech-teal bg-opacity-10 border-2 border-tech-teal rounded-lg p-6">
              <div class="flex items-start">
                <div class="text-2xl mr-3">‚è±Ô∏è</div>
                <div>
                  <h3 class="font-heading font-semibold text-steel-blue mb-2">Response Time</h3>
                  <p class="text-sm text-charcoal">
                    I personally read every message and respond within 24-48 hours.
                    If you don't hear back, check your spam folder or email again!
                  </p>
                </div>
              </div>
            </div>

            <!-- Support Section -->
            <div class="bg-gray-50 rounded-lg p-6">
              <h3 class="font-heading font-semibold text-steel-blue mb-3">Need help with the app?</h3>
              <ul class="text-sm text-charcoal space-y-2">
                <li>üìö Check the <a href="/faq" class="text-tech-teal hover:underline">FAQ</a> first</li>
                <li>üí¨ Ask Tiny in the app (fastest!)</li>
                <li>üìß Or email: support@mytinyceo.com</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
